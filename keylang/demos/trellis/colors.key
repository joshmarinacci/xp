@board("trellis")

@type("start",setup)
fun setup() {
    print("in the setup")
    //setup standard trellis canvas and button grid
    //clear to black
    trellis.fill(BLACK)
    //wait(1)
    trellis.fill(RED)
    //wait(1)
    trellis.fill(BLACK)
}

@type("loop",blink)
fun blink() {
    let pos = [0,0]
    wait(0.1)
    trellis.set(pos,GREEN)
    wait(0.9)
    trellis.set(pos,BLACK)
}

@type("loop",loop)
fun loop() {
    //whenever a button is clicked, set it to red
    trellis.just_pressed.every((pos) => {
        trellis.set(pos,RED)
    })
    trellis.just_released.every((pos) => {
        trellis.set(pos,WHITE)
    })

}
