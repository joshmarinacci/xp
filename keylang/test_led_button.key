{
mode_running = 0
my_button = 0

fun setup() {
    print("setup running")
    mode_running = false
    my_button = Button(board.SWITCH)
    print("did start")
    set_led(GREEN)
}
fun my_button_clicked() {
    if(mode_running == true) {
        mode_running = false
        set_led(GREEN)
    } else {
        mode_running = true
        set_led(RED)
    }
    print("mode running",mode_running)
}

fun loop() {
    if(mode_running) {
        print("inside the loop")
        print("pressing E")
        //keyboard_press("E")
        set_led(RED)

        wait(0.3)
        set_led(BLACK)
        wait(0.3)
        set_led(RED)
        wait(0.3)
        set_led(BLACK)
        wait(0.3)

        //keyboard_release_all()
        print("waiting 3")
        wait(3)
    }
}
}
