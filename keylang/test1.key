let palette = List()
let black = Color(0,0,0)
let red = Color(1,0,0)
let green = Color(0,1,0)
let blue = Color(0,0,1)
let dots = 0
// hi!
// what else can we do?
fun setup_drips() {
    palette = List(black,red,green,blue)
    fun MakeDot() {
        let dot = Obj()
        dot.xy = Point(randi(0,screen.width), randi(0,1))
        dot.v =  Vector(randf(-0.1,0.1), randf(0.5,1.5))
        dot.color = choose(palette)
        return dot
    }
    dots = range(20).map(()=> { MakeDot()})
}


fun draw_dots() {
    dots.every((dot) => {
        dot.xy = wrap(add(dot.xy , dot.v), List(0,0), screen.size)
        screen.setPixel(dot.xy,dot.color)
    })
}
}
