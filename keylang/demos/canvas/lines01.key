@board("canvas")

let line
screen = new KCanvas(0,0,1024,768)

@type('start',setup)
fun setup() {

    //let list_of_rects = 20.each Rect(x:i*10, y:0, w:10, h:10)
    //list_of_rects  each @{r => r.position += r.velocity}

    line = range(20, screen.width-200, 10).map((x) => {[x,20]})
    range(800).every(() => {
        screen.drawPolyLine(line,BLACK)
        line = line.map((pt) => {
            pt + [randf(-1,1), randf(-0.5,0.5)+0.5]
        })
    })
}
