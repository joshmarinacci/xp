@board('canvas')

let dots
let g = Vector(0,0.01)

@type("start",setup)
fun setup() {
    fun MakeDot() {
        let dot = Circle(
            randi(0,screen.width),
            randi(0,screen.height),
            1)
        dot.v = Vector(randf(-0.4,0.4),0)
        return dot
    }
    dots = range(100).map(()=> { MakeDot() })
    screen.globalAlpha = 0.1
}

let reflect = List(1.1,-0.9)
// call this every one second
@type("loop",loop)
fun loop() {
    dots.every((dot) => {
        dot.v = dot.v + g
        dot.center = dot.center + dot.v
        dot.x = wrap(dot.x, 0, screen.width)
        if (dot.y > screen.height) {
            dot.v = dot.v * reflect
        }

        screen.fillCircle(dot,BLACK)
    })
}

