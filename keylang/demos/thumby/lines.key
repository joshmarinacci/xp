@board("thumby")

let line
screen = new KCanvas(w:72,h:40)

@type('start',setup)
fun setup() {
    line = range(20, screen.width-200, 10).map((x) => {[x,20]})
    let step = 5
    range(screen.height/step).every(() => {
        screen.drawPolyLine(line,BLACK)
        line = line.map((pt) => {
            pt + [randf(-2,-1), randf(-0.5,0.5)+step]
        })
    })
}
